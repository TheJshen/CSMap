<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity"
    style="@style/LoginRegister.Background" >

    <LinearLayout
        android:id="@+id/login_register"
        style="@style/LoginRegister.AltActionContainer">

        <Button
            android:id="@+id/button_register"
            style="@style/LoginRegister.AltActionButton"
            android:text="@string/login_register" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/login_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@id/login_register"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/login_holder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_textfields"
                style="@style/LoginRegister.ActionContainer"
                android:layout_below="@id/login_holder">

                <EditText
                    android:id="@+id/username"
                    style="@style/LoginRegister.EditText.Text"
                    android:hint="@string/login_register_username" />

                <EditText
                    android:id="@+id/password"
                    style="@style/LoginRegister.EditText.Password"
                    android:hint="@string/login_register_password" />

                <Button
                    android:id="@+id/button_signup"
                    style="@style/LoginRegister.ActionButton"
                    android:text="@string/login_login" />
                <Button
                    android:id="@+id/reset_button"
                    style="@style/LoginRegister.AltActionButton"
                    android:text="@string/login_forgot_password" />


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>