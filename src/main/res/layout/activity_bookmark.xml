<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.kcco.csmap.BookmarkActivity"
    style="@style/LayoutContainerTheme" >

    <!-- Banner Bar -->
    <TextView
        android:id="@+id/bookmark_banner"
        style="@style/MainTheme.BannerBar">
    </TextView>

    <!-- Title Bar -->
    <TextView
        android:id="@+id/bookmark_title"
        android:layout_below="@id/bookmark_banner"
        style="@style/MainTheme.TitleBar" >
    </TextView>

    <!-- Main Display -->
    <ScrollView
        android:layout_below="@+id/bookmark_title"
        style="@style/MainTheme.MainScrollView">

        <RelativeLayout
            android:id="@+id/bookmark_main"
            style="@style/MainTheme.MainScrollContainer">

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
