<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.kcco.csmap.RoomAvailOptionsActivity"
    android:id="@+id/activity_room_avail_options"
    style="@style/LayoutContainerTheme">

    <!-- Banner Bar -->
    <RelativeLayout
        android:id="@+id/room_avail_options_banner"
        style="@style/MainTheme.BannerBar.ToggleMenu">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_main_menu" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/room_avail_options_banner"
        android:background="@drawable/background_ucsd" >

        <!-- Title Bar -->
        <TextView
            android:id="@+id/room_avail_options_title"
            style="@style/MainTheme.TitleBar" >
        </TextView>

        <!-- Main Display  -->
        <ScrollView
            android:layout_below="@+id/room_avail_options_title"
            style="@style/MainTheme.MainScrollView" >

            <RelativeLayout
                android:id="@+id/room_avail_options_main"
                style="@style/MainTheme.MainScrollContainer">

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
