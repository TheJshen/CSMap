<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.kcco.csmap.ClassroomInfoActivity"
    android:id="@+id/activity_classroom_info"
    style="@style/LayoutContainerTheme">

    <!-- Title Bar -->
    <TextView
        android:id="@+id/classroom_info_title"
        style="@style/MainTheme.TitleBar">
    </TextView>

    <!-- Button Bar -->
    <HorizontalScrollView
        android:id="@+id/classroom_info_button"
        android:layout_below="@id/classroom_info_title"
        style="@style/MainTheme.ButtonScroller">

        <LinearLayout
            style="@style/MainTheme.ButtonContainer">

            <Button style="@style/MainTheme.Button" android:id="@+id/Button1" android:text="@string/button1"/>
            <Button style="@style/MainTheme.Button" android:id="@+id/Button2" android:text="@string/button2"/>
            <Button style="@style/MainTheme.Button" android:id="@+id/Button3" android:text="@string/button3"/>
            <Button style="@style/MainTheme.Button" android:id="@+id/Button4" android:text="@string/button4"/>
            <Button style="@style/MainTheme.Button" android:id="@+id/Button5" android:text="@string/button5"/>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Main Display  -->
    <ScrollView
        android:layout_below="@+id/classroom_info_button"
        style="@style/MainTheme.MainScrollView">

        <RelativeLayout
            android:id="@+id/classroom_info_main"
            style="@style/MainTheme.MainContainer.Button">

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
