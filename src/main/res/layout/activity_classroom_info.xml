<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kcco.csmap.ClassroomInfoActivity"
    android:id="@+id/activity_classroom_info"
    android:background="@drawable/layerlist_test">

    <TextView
        android:id="@+id/classroom_info_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/abc_text_size_title_material"
        android:gravity="center"
        android:text="CLASS TITLE HERE"
        >

    </TextView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/classroom_info_title"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:overScrollMode="never"
        >

        <TextView
            android:id="@+id/classroom_info_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/abc_text_size_body_1_material"
            android:text="SCHEDULE INFO HERE"/>

    </ScrollView>

</RelativeLayout>
